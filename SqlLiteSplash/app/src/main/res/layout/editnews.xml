<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context = ".NewsEditActivity">



    <EditText
        android:id="@+id/titlenews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166"
        tools:layout_editor_absoluteX="-3dp" />

    <EditText
        android:id="@+id/contentnews"
        android:layout_width="408dp"
        android:layout_height="327dp"
        android:hint="Content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/titlenews"
        app:layout_constraintTop_toBottomOf="@id/titlenews" />
    <Button
        android:id="@+id/AddNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/contentnews"
        app:layout_constraintTop_toBottomOf="@id/contentnews"
        android:text="Add"
        />
    <Button
        android:id="@+id/EditNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/AddNews"
        app:layout_constraintTop_toBottomOf="@id/AddNews"
        android:text="Edit"
        />
    <Button
        android:id="@+id/DeleteNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/EditNews"
        app:layout_constraintTop_toBottomOf="@id/EditNews"
        android:text="Delete"
        />
</androidx.constraintlayout.widget.ConstraintLayout>