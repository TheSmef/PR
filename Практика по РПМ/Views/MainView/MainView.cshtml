@model IndexViewModel

@{
    ViewData["Title"] = "Ваша страница";
}

<head>
    <style>
        .imgbtn {
            width: auto;
            padding: 10px 18px;
            background-color: white;
            width: 30%;
        }

        .imgcontainer {
            text-align: center;
            margin: 24px 0 12px 0;
        }

        img.avatar {
            width: 30%;
            border-radius: 50%;
        }
    </style>
</head>


<link rel="stylesheet" type="text/css" href="~/css/util.css">
<link rel="stylesheet" type="text/css" href="~/css/main.css">
<!--===============================================================================================-->

<body>
    <form class="text-center" asp-action="DataChange" asp-controller="MainView">
        <div style=" width: 50%" class="container">
            <div class="wrap-input100">
                @if (@Model.Users.First().id_Image != null)
                {
                    <img src="@Model.Users.First().id_Image.Source" width="100" height="100" />
                }
            </div>
            <span>
                Email
            </span>
            <div class="wrap-input100">
                <input class="input100" name="email" type="email" disabled value="@Model.Users.First().Email">
                <span class="focus-input100"></span>
                <span class="symbol-input100">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </span>
            </div>
            <span>
                Login
            </span>
            <div class="wrap-input100">
                <input class="input100" type="text" required disabled value="@Model.Users.First().Login" />
                <span class="focus-input100"></span>
                <span class="symbol-input100">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </span>
            </div>
            <span>
                Birth Date
            </span>
            <div class="wrap-input100">
                <input class="input100" name="datecringe" type="text" disabled value="@Model.Users.First().birth_date">
                <span class="focus-input100"></span>
                <span class="symbol-input100">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </span>
            </div>
            <span>
                Status
            </span>
            <div class="wrap-input100">
                <input class="input100" name="desc" type="text" disabled value="@Model.Users.First().Description">
                <span class="focus-input100"></span>
                <span class="symbol-input100">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </span>
            </div>
            <div>
                <button class="login100-form-btn">
                    Change Data of User
                </button>
            </div>
        </div>

    </form>
    <hr class="solid">
    <form class="text-center">
        @foreach (var item in Model.Posts)
        {

            <div>
                <h1>@item.Title</h1>
                <h3>@item.Date</h3>
                <h3>@item.Message</h3>
                <a asp-action="PostInfo" asp-controller="MainView" asp-route-id="@item.id">Подробнее</a>
                <td><a asp-action="deletePost" asp-controller="MainView" asp-route-id="@item.id">X</a></td>
            </div>
            <hr class="solid">

        }


    </form>


</body>



