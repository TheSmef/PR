<body>
    <div class="container">


        <form asp-controller="MainView" asp-action="RegistrationOver" enctype="multipart/form-data">
            <div class="container" style="width: 40%;">
                <form class="login100-form validate-form">

                    <span class="login100-form-title">
                        Registration
                    </span>
                    <div class="wrap-input100">
                        <input name="file" type="file">
                    </div>
                    <div class="wrap-input100">
                        <input class="input100" name="email" type="email" placeholder="Enter Email" required asp-for="Email">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100">
                        <input class="input100" type="text" asp-for="Login" placeholder="Login" required />
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100">
                        <input class="input100" type="password" placeholder="Enter Password" required asp-for="Password">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100">
                        <input class="input100" name="datecringe" type="date" placeholder="Enter Date of birth" required asp-for="birth_date">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>





                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Registration
                        </button>
                    </div>

                </form>
            </div>
        </form>

    </div>

</body>


